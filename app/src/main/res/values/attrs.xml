<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MainItemView">
        <attr name="select_icon" format="reference" />
        <attr name="normal_icon" format="reference" />
        <attr name="title" format="string" />
        <attr name="select_titleColor" format="color" />
        <attr name="normal_titleColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MainMineItemView">
        <attr name="mine_icon" format="reference" />
        <attr name="mine_title" format="string" />
        <attr name="show_button" format="boolean" />
        <attr name="show_arrow" format="boolean" />
    </declare-styleable>
    <declare-styleable name="BaseSettingView">
        <attr name="setting_title" format="string" />
        <attr name="setting_titleSize" format="dimension" />
        <attr name="setting_show_extra" format="boolean" />
        <attr name="setting_show_arrow" format="boolean" />

    </declare-styleable>

    <declare-styleable name="VerticalTextView">
        <attr name="lineSpacingExtra" format="dimension" />
        <attr name="charSpacingExtra" format="dimension" />
        <attr name="textLeftToRight" format="boolean" />
        <attr name="underLineText" format="boolean" />
        <attr name="underLineWidth" format="float" />
        <attr name="underLineColor" format="color" />
        <attr name="underlineOffset" format="dimension" />
        <attr name="textHeightLightColor" format="color" />

    </declare-styleable>

    <declare-styleable name="BaseIndexView">
        <attr name="index_icon" format="reference" />
        <attr name="index_title" format="string" />
        <attr name="index_title_color" format="color" />
        <attr name="index_title_show" format="boolean" />
    </declare-styleable>


