<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <yc.com.homework.base.widget.CommonToolBar
        android:id="@+id/commonToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f0f6fa"
        android:paddingTop="@dimen/t10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="216dp"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/t15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_subject"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/t10dp">

                    <TextView
                        android:id="@+id/tv_yuwen"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/t40dp"
                        android:layout_marginRight="@dimen/t15dp"
                        android:layout_weight="1"
                        android:background="@drawable/subject_select_selector"
                        android:gravity="center"
                        android:text="@string/yuwen"
                        android:textColor="@color/subject_select_color_selector" />

                    <TextView
                        android:id="@+id/tv_mathematics"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/t40dp"
                        android:layout_marginRight="@dimen/t15dp"
                        android:layout_weight="1"
                        android:background="@drawable/subject_select_selector"
                        android:gravity="center"
                        android:text="@string/mathematics"
                        android:textColor="@color/subject_select_color_selector" />

                    <TextView
                        android:id="@+id/tv_english"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/t40dp"
                        android:layout_weight="1"
                        android:background="@drawable/subject_select_selector"
                        android:gravity="center"
                        android:text="@string/english"
                        android:textColor="@color/subject_select_color_selector" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_upload"
            android:layout_width="match_parent"
            android:layout_height="@dimen/t48dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/t15dp"
            android:background="@drawable/blue_corners_bg"
            android:clickable="true"
            android:elevation="@dimen/t3dp"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/upload"
            android:textColor="@color/white"
            android:textSize="@dimen/t16sp" />
    </RelativeLayout>
</LinearLayout>