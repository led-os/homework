<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/t10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_book_cover"
            android:layout_width="116dp"
            android:layout_height="151dp"
            android:layout_marginRight="@dimen/t10dp"
            android:layout_marginTop="@dimen/t10dp" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@mipmap/note_delete_icon"
            android:visibility="invisible" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t5dp"
        android:textColor="@color/black_333" />

    <TextView
        android:id="@+id/tv_book_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t1dp"
        android:textColor="@color/gray_a9a9a9"
        android:textSize="@dimen/t12sp" />


</LinearLayout>