<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_item_bg"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/t8dp"
    android:paddingLeft="@dimen/t15dp"
    android:paddingRight="@dimen/t15dp"
    android:paddingTop="@dimen/t8dp">

    <RelativeLayout
        android:layout_width="@dimen/t60dp"
        android:layout_height="@dimen/t60dp">

        <ImageView
            android:id="@+id/iv_message_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/message_default_icon" />

        <ImageView
            android:id="@+id/iv_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/t8dp"
            android:src="@drawable/message_circle_bg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/t10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="11-18"
                android:textColor="@color/gray_aaaaaa"
                android:textSize="@dimen/t13sp" />

            <TextView
                android:id="@+id/tv_message_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/t5dp"
                android:layout_toLeftOf="@id/tv_message_time"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/t16sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_message_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="双十一大放送，续年卡，低至100元"
            android:textColor="@color/gray_aaaaaa"
            android:textSize="@dimen/t13sp" />


    </LinearLayout>

</LinearLayout>