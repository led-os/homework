<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/t70dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/t20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/t3dp"
                android:maxLines="2"
                android:text="数学成绩好的孩子都有这3个习惯，家长一定要告诉他"
                android:textColor="@color/gray_555555"
                android:textSize="@dimen/t14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tv_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="学习有方法"
                    android:textColor="@color/red_f57f73"
                    android:textSize="@dimen/t12sp" />

                <TextView
                    android:id="@+id/tv_read_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="111111阅读"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/t12sp" />
            </RelativeLayout>


        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="107dp"
            android:layout_height="@dimen/t63dp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/t5dp">

            <ImageView
                android:id="@+id/iv_news_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/news_exam_icon" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/t5dp"
        android:background="@color/gray_f4efee" />
</LinearLayout>