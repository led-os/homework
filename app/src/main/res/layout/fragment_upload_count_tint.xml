<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_white_bg"
        android:orientation="vertical"
        android:padding="@dimen/t20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="您的免费上传作业次数已用完"
            android:textColor="@color/black"
            android:textSize="@dimen/t16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/t5dp"
            android:text="您可以购买服务卡或者明天再上传作业"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/t8dp"
            android:src="@mipmap/upload_count_tint_icon" />


        <TextView
            android:id="@+id/tv_unlock_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t12dp"
            android:background="@drawable/blue_corners_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/t8dp"
            android:paddingTop="@dimen/t8dp"
            android:text="@string/service_buy"
            android:textColor="@color/white"
            android:textSize="@dimen/t16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/t10dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/t3dp"
            android:text="每天每个用户可免费上传一次一张作业\n因此给您带来的不便，敬请谅解"
            android:textColor="@color/gray_aaaaaa"
            android:textSize="@dimen/t12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/t20dp"
        android:src="@mipmap/book_read_lock_close" />

</LinearLayout>