<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/t10dp"
    android:paddingLeft="@dimen/t15dp"
    android:paddingTop="@dimen/t10dp">

    <ImageView
        android:id="@+id/iv_booK_cover"
        android:layout_width="wrap_content"
        android:layout_height="110dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/t5dp"
        android:layout_marginLeft="@dimen/t15dp"
        android:layout_marginTop="@dimen/t5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/t16sp" />

        <TextView
            android:id="@+id/tv_book_publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t10dp"
            android:textColor="@color/gray_aaaaaa" />

        <TextView
            android:id="@+id/tv_book_sentences"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:textColor="@color/app_selected_color" />

    </LinearLayout>

</LinearLayout>