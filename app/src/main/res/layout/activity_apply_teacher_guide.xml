<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <yc.com.homework.base.widget.CommonToolBar
        android:id="@+id/commonToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <yc.com.homework.base.widget.StateView
        android:id="@+id/stateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f0f6fa" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f0f6fa"
        android:paddingTop="@dimen/t10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/apply_teacher_top_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/t15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/teaching_qualification"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_qualification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/t10dp"
                    android:lineSpacingExtra="@dimen/t5dp"
                    android:text="1.具有教师资格证\n2.本科及以上学历\n3.985、211在线学生优先考虑"
                    android:textColor="@color/gray_aaaaaa" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/t10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/t15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_feature"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_characteristic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/t10dp"
                    android:lineSpacingExtra="@dimen/t5dp"
                    android:text="1.时间灵活，有稳定生源；\n2.薪资解算及时，以奖金形式提现"
                    android:textColor="@color/gray_aaaaaa" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_apply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/t48dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/t10dp"
            android:background="@drawable/apply_bg"
            android:clickable="true"
            android:elevation="@dimen/t1dp"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/apply"
            android:textColor="@color/white"
            android:textSize="@dimen/t16sp" />


    </RelativeLayout>

</LinearLayout>