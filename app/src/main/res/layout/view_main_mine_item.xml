<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/t15dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/mine_coin_icon" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/t10dp"
        android:layout_toEndOf="@id/iv_icon"
        android:text="@string/coin"
        android:textColor="@color/black"
        android:textSize="@dimen/t16sp" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/right_icon" />

    <TextView
        android:id="@+id/tv_recharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/t5dp"
        android:layout_toLeftOf="@id/iv_arrow"
        android:background="@drawable/subject_blue_bg"
        android:paddingBottom="@dimen/t3dp"
        android:paddingLeft="@dimen/t8dp"
        android:paddingRight="@dimen/t8dp"
        android:paddingTop="@dimen/t3dp"
        android:text="@string/recharge"
        android:textColor="@color/white"
        android:textSize="@dimen/t12sp" />

</RelativeLayout>