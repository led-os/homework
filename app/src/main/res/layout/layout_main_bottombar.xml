<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/t56dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_wall_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center">

        <yc.com.homework.base.widget.MainItemView
            android:id="@+id/mainItem_wall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:normal_icon="@mipmap/main_index_normal"
            app:normal_titleColor="@color/app_normal_color"
            app:select_icon="@mipmap/main_index_selected"
            app:select_titleColor="@color/app_selected_color"
            app:title="@string/index" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_check_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center">

        <yc.com.homework.base.widget.MainItemView
            android:id="@+id/mainItem_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:normal_icon="@mipmap/main_answer_query_normal"
            app:normal_titleColor="@color/app_normal_color"
            app:select_icon="@mipmap/main_answer_query_select"
            app:select_titleColor="@color/app_selected_color"
            app:title="@string/answer_look" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_welfare_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center">

        <yc.com.homework.base.widget.MainItemView
            android:id="@+id/mainItem_welfare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:normal_icon="@mipmap/main_welfare_normal"
            app:normal_titleColor="@color/app_normal_color"
            app:select_icon="@mipmap/main_welfare_select"
            app:select_titleColor="@color/app_selected_color"
            app:title="@string/welfare" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_main_homework"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_carton1"
            android:layout_width="@dimen/t48dp"
            android:layout_height="@dimen/t48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/t3dp"
            android:src="@drawable/camera_inner_bg" />

        <ImageView
            android:id="@+id/iv_carton2"
            android:layout_width="@dimen/t48dp"
            android:layout_height="@dimen/t48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/t3dp"
            android:src="@drawable/camera_inner_bg" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/t3dp"
            android:src="@mipmap/main_homework" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_mine_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:gravity="center">

        <yc.com.homework.base.widget.MainItemView
            android:id="@+id/mainItem_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:normal_icon="@mipmap/main_mine_normal"
            app:normal_titleColor="@color/app_normal_color"
            app:select_icon="@mipmap/main_mine_selected"
            app:select_titleColor="@color/app_selected_color"
            app:title="@string/mine" />
    </LinearLayout>

</LinearLayout>