<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/t1dp"
    android:background="@drawable/main_item_bg"
    android:padding="@dimen/t10dp">


    <ImageView
        android:id="@+id/iv_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/read_lock" />

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/t10dp"
        android:layout_toStartOf="@id/iv_lock"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black_333" />


</RelativeLayout>


