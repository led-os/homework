<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <yc.com.homework.base.widget.MainToolBar
        android:id="@+id/mainToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_f0f6fa"
        android:orientation="vertical"
        android:padding="@dimen/t15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_small_bg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/t10dp"
            android:paddingRight="@dimen/t10dp"
            android:paddingTop="@dimen/t10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="@dimen/t3dp"
                        android:layout_height="@dimen/t15dp"
                        android:background="@color/app_selected_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/t5dp"
                        android:text="@string/my_textbook"
                        android:textColor="@color/black_333" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/read_eidt_bg"
                    android:paddingBottom="@dimen/t3dp"
                    android:paddingLeft="@dimen/t7dp"
                    android:paddingRight="@dimen/t7dp"
                    android:paddingTop="@dimen/t3dp"
                    android:text="@string/edit"
                    android:textColor="@color/app_selected_color" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/read_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/t15dp"
                android:layout_marginRight="@dimen/t10dp"
                android:layout_marginTop="@dimen/t15dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_switch_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/t15dp"
            android:src="@mipmap/photograph_btn"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>