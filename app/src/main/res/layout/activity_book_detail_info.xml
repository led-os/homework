<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <yc.com.homework.read.widget.CustomViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/flurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/iv_book_read_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/t10dp"
        android:src="@mipmap/book_read_click" />

    <ImageView
        android:id="@+id/iv_book_read_succession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/t10dp"
        android:src="@mipmap/book_read_succession" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/rl_read_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/t10dp">


        <TextView
            android:id="@+id/tv_stop"
            android:layout_width="@dimen/t40dp"
            android:layout_height="@dimen/t40dp"
            android:layout_gravity="center"
            android:background="@drawable/red_circle_bg"
            android:gravity="center"
            android:text="@string/stop"
            android:textColor="@color/white"
            android:textSize="@dimen/t12sp" />

        <ImageView
            android:id="@+id/iv_book_read_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/read_add_icon" />


    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_play_controller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/t10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_state_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/book_read_play" />

        <ImageView
            android:id="@+id/iv_state_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/book_read_pause" />
    </FrameLayout>


</RelativeLayout>
