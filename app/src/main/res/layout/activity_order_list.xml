<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_selected_color"
        android:paddingStart="@dimen/t10dp"
        android:paddingTop="@dimen/status_bar_height">


        <android.support.design.widget.TabLayout
            android:id="@+id/order_tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/t26dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/t5dp"
            android:layout_marginTop="@dimen/t5dp"
            android:background="@drawable/tab_item_selected"
            android:padding="@dimen/t1dp"
            app:tabBackground="@drawable/tab_item_selector"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/transparant"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="@color/app_selected_color"
            app:tabTextColor="@color/white">

        </android.support.design.widget.TabLayout>

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/t5dp"
            android:padding="@dimen/t5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/base_back" />
        </RelativeLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>