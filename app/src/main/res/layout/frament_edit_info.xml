<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/exit_white_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/t5dp"
        android:paddingLeft="@dimen/t15dp"
        android:paddingRight="@dimen/t15dp"
        android:paddingTop="@dimen/t15dp">

        <TextView
            android:id="@+id/tv_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/t15dp"
            android:gravity="center_horizontal"
            android:text="请选择年级"
            android:textColor="@color/black"
            android:textSize="@dimen/t16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/grade_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/t30dp"
            android:background="@drawable/info_edit_bg"
            android:hint="请输入昵称"
            android:paddingLeft="@dimen/t10dp"
            android:singleLine="true"
            android:textSize="@dimen/t14sp"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_f0f6fa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/t35dp">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_f1f1f1" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/app_selected_color" />
    </LinearLayout>

</LinearLayout>